<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:id="@+id/server_card_view"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="16dp"
    android:background="@drawable/layout_bg"
    app:cardBackgroundColor="@color/colorPrimaryLight"
    android:clickable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/server_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="16dp"
            android:text="@string/server_string"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/server_name"
            style="@style/CardTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/server_title"
            android:text="Name: lab_52_2018"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/server_host"
            style="@style/CardTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/server_name"
            android:text="Host: lab.posevin.com"
            android:textSize="12dp" />

        <ImageButton
            android:layout_width="41dp"
            android:layout_height="46dp"
            android:id="@+id/delete_button"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:src="@drawable/icons8_trash_can_48" />


    </RelativeLayout>
</android.support.v7.widget.CardView>